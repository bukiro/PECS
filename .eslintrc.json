{
    "root": true,
    "parserOptions": {
        "project": [
            "./tsconfig.base.json"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module"
            },
            "extends": [
                "@team23/eslint-config-team23-standard",
                "@team23/eslint-config-team23-ts",
                "@team23/eslint-config-team23-angular"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "@typescript-eslint"
            ],
            "rules": {
                "@typescript-eslint/indent": [
                    "error",
                    4,
                    {
                        "SwitchCase": 1,
                        "ignoredNodes": [
                            "PropertyDefinition"
                        ]
                    }
                ],
                "linebreak-style": [
                    "error",
                    "windows"
                ],
                "prefer-template": "error",
                "@typescript-eslint/object-curly-spacing": [
                    "error",
                    "always"
                ],
                "no-invalid-this": "off",
                "@typescript-eslint/no-invalid-this": [
                    "error"
                ],
                "object-shorthand": "warn",
                "@typescript-eslint/no-magic-numbers": [
                    "error",
                    {
                        "ignoreDefaultValues": true,
                        "detectObjects": true,
                        "ignore": [
                            -1,
                            1,
                            0
                        ],
                        "ignoreReadonlyClassProperties": true,
                        "ignoreEnums": true
                    }
                ],
                "no-console": [
                    "warn",
                    {
                        "allow": [
                            "warn",
                            "error"
                        ]
                    }
                ]
            }
        },
        {
            "files": "*.html",
            "extends": [
                "@team23/eslint-config-team23-angular"
            ]
        }
    ],
    "env": {
        "browser": true,
        "es2021": true
    }
}
